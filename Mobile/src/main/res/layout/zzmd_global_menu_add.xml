<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout style="@style/ZZMD.LinearBase.Normal.Vertical"
        android:descendantFocusability="beforeDescendants"
        android:focusableInTouchMode="true">
        <ScrollView
            style="@style/ZZMD.ScrollViewBase.Normal.Vertical"
            android:layout_weight="1" >
            <LinearLayout
                android:id="@+id/table_layout"
                style="@style/ZZMD.LinearBase.Normal.Vertical"
                android:focusable="true"
                android:focusableInTouchMode="true" >
                <TextView
                    style="@style/ZZMD.TextViewBase.Title"
                    android:id="@+id/zzmd_menu_item_add_label">
                </TextView>
                <TextView
                    style="@style/ZZMD.TextViewBase.Emphasis"
                    android:id="@+id/zzmd_menu_item_add_emphasis" >
                </TextView>
                <LinearLayout
                    style="@style/ZZMD.LinearBase.Normal.Horizontal.Table" >
                    <TextView
                        android:id="@+id/item_name_label"
                        style="@style/ZZMD.TextViewBase.Normal.Table.TwoColumn" >
                    </TextView>
                    <EditText
                        android:id="@+id/item_name"
                        style="@style/ZZMD.EditTextBase.Normal.Table.TwoColumn" />
                </LinearLayout>
                <LinearLayout
                    style="@style/ZZMD.LinearBase.Normal.Horizontal.Table" >
                    <TextView
                        android:id="@+id/label_label"
                        style="@style/ZZMD.TextViewBase.Normal.Table.TwoColumn" />
                    <EditText
                        android:id="@+id/label"
                        style="@style/ZZMD.EditTextBase.Normal.Table.TwoColumn"
                        android:drawableRight="@drawable/magnifying_glass" />
                </LinearLayout>
                <LinearLayout
                    style="@style/ZZMD.LinearBase.Normal.Horizontal.Table" >
                    <TextView
                        android:id="@+id/label_description_label"
                        style="@style/ZZMD.TextViewBase.Normal.Table.TwoColumn"
                        android:visibility="invisible" />
                    <TextView
                        android:id="@+id/label_description"
                        style="@style/ZZMD.TextViewBase.ReadOnlyValue.Table.TwoColumn.Small" />
                </LinearLayout>
                <LinearLayout
                    style="@style/ZZMD.LinearBase.Normal.Horizontal.Table" >
                    <TextView
                        android:id="@+id/count_script_label"
                        style="@style/ZZMD.TextViewBase.Normal.Table.TwoColumn" />
                    <EditText
                        android:id="@+id/count_script"
                        style="@style/ZZMD.EditTextBase.Normal.Table.TwoColumn"
                        android:drawableRight="@drawable/magnifying_glass" />
                </LinearLayout>
                <LinearLayout
                    style="@style/ZZMD.LinearBase.Normal.Horizontal.Table" >
                    <TextView
                        android:id="@+id/count_script_description_label"
                        style="@style/ZZMD.TextViewBase.Normal.Table.TwoColumn"
                        android:visibility="invisible" />
                    <TextView
                        android:id="@+id/count_script_description"
                        style="@style/ZZMD.TextViewBase.ReadOnlyValue.Table.TwoColumn.Small" />
                </LinearLayout>
                <LinearLayout
                    style="@style/ZZMD.LinearBase.Normal.Horizontal.Table" >
                    <TextView
                        android:id="@+id/screen_id_label"
                        style="@style/ZZMD.TextViewBase.Normal.Table.TwoColumn" >
                    </TextView>
                    <Spinner
                        android:id="@+id/screen_id"
                        style="@style/ZZMD.SpinnerBase.Normal.Table.TwoColumn" >
                    </Spinner>
                </LinearLayout>
                <LinearLayout
                    style="@style/ZZMD.LinearBase.Normal.Horizontal.Table" >
                    <TextView
                        android:id="@+id/tap_event_label"
                        style="@style/ZZMD.TextViewBase.Normal.Table.TwoColumn" />
                    <EditText
                        android:id="@+id/tap_event"
                        style="@style/ZZMD.EditTextBase.Normal.Table.TwoColumn"
                        android:drawableRight="@drawable/magnifying_glass" />
                </LinearLayout>
                <LinearLayout
                    style="@style/ZZMD.LinearBase.Normal.Horizontal.Table" >
                    <TextView
                        android:id="@+id/tap_event_description_label"
                        style="@style/ZZMD.TextViewBase.Normal.Table.TwoColumn"
                        android:visibility="invisible" />
                    <TextView
                        android:id="@+id/tap_event_description"
                        style="@style/ZZMD.TextViewBase.ReadOnlyValue.Table.TwoColumn.Small" />
                </LinearLayout>
                <LinearLayout style="@style/ZZMD.LinearBase.Normal.Horizontal.Table" >
                    <TextView
                        android:id="@+id/icon_name_label"
                        style="@style/ZZMD.TextViewBase.Normal.Table.TwoColumn"
                        android:layout_weight="0.3" />
                    <Spinner
                        android:id="@+id/icon_name"
                        style="@style/ZZMD.SpinnerBase.Normal.Table.TwoColumn"
                        android:layout_weight="0.6" />
                    <ImageView
                        android:id="@+id/icon_name_preview"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.1"
                        android:paddingRight="6dp"
                        android:src="@drawable/no_image24x24"/>
                </LinearLayout>
                <LinearLayout
                    style="@style/ZZMD.LinearBase.Normal.Horizontal.Table" >
                    <TextView
                        android:id="@+id/hide_if_zero_label"
                        style="@style/ZZMD.TextViewBase.Normal.Table.TwoColumn" />
                    <CheckBox
                        android:id="@+id/hide_if_zero"
                        style="@style/ZZMD.CheckBoxBase.Normal.Table.TwoColumn" />
                </LinearLayout>
                <LinearLayout
                    style="@style/ZZMD.LinearBase.Normal.Horizontal.Table" >
                    <TextView
                        android:id="@+id/description_label"
                        style="@style/ZZMD.TextViewBase.Normal.FullWidth" />
                </LinearLayout>
                <LinearLayout
                    style="@style/ZZMD.LinearBase.Normal.Horizontal.Table" >
                    <EditText
                        android:id="@+id/description"
                        style="@style/ZZMD.EditTextBase.MultiLine" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/White"
            android:orientation="horizontal"
            android:padding="5dip" >
            <Button
                android:id="@+id/save"
                style="@style/ZZMD.ButtonBase.Normal.ActionBar"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>
    </LinearLayout>
    <include layout="@layout/sliding_menu_layout"/>
</androidx.drawerlayout.widget.DrawerLayout>