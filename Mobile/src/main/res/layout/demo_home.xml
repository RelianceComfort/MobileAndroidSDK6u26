<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">	
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    android:id="@+id/home_background"
	    style="@style/LinearBase.Normal.Vertical" >
	
	    <ScrollView
	        xmlns:android="http://schemas.android.com/apk/res/android"
	        style="@style/ScrollViewBase.Normal.Vertical"
	        android:layout_weight="1" >
	        <TableLayout
	            xmlns:android="http://schemas.android.com/apk/res/android"
	            style="@style/TableBase.Normal.Buttons" >
	            <TableRow>

					<Button
						android:id="@+id/tasks"
						style="@style/ButtonBase.Normal.Table"
						android:drawableTop="@drawable/jobs" />

					<Button
						android:id="@+id/customers"
						style="@style/ButtonBase.Normal.Table"
						android:drawableTop="@drawable/customers" />

					<Button
						android:id="@+id/equipment"
						style="@style/ButtonBase.Normal.Table"
						android:drawableTop="@drawable/equipment" />
	            </TableRow>
	            <TableRow>

					<Button
						android:id="@+id/team"
						style="@style/ButtonBase.Normal.Table"
						android:drawableTop="@drawable/team" />

					<Button
						android:id="@+id/receiving"
						style="@style/ButtonBase.Normal.Table"
						android:drawableTop="@drawable/receiving" />

					<Button
						android:id="@+id/work_status"
						style="@style/ButtonBase.Normal.Table"
						android:drawableTop="@drawable/work_status" />
	            </TableRow>
	            <TableRow>

					<Button
						android:id="@+id/admin"
						style="@style/ButtonBase.Normal.Table"
						android:drawableTop="@drawable/admin" />

					<Button
						android:id="@+id/profile"
						style="@style/ButtonBase.Normal.Table"
						android:drawableTop="@drawable/profile" />

					<Button
						android:id="@+id/about"
						style="@style/ButtonBase.Normal.Table"
						android:drawableTop="@drawable/about" />
	            </TableRow>
	        </TableLayout>
	    </ScrollView>
	    <include layout="@layout/split_action_bar" />
	    <include layout="@layout/important_information_bar" />
	</LinearLayout>
	<!-- The navigation drawer -->  
    <include layout="@layout/sliding_menu_layout"/>
    
</androidx.drawerlayout.widget.DrawerLayout>