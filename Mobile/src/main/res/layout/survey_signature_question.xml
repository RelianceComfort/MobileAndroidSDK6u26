<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:id="@+id/survey_sigq_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/TextViewBase.Normal"  />
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="3dip">
        <com.metrix.architecture.signature.SignatureField
            android:id="@+id/survey_sigq_field"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/survey_sigq_continue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/ButtonBase.Survey" />
    </LinearLayout>
</merge>