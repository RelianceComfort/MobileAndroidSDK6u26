<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/LinearBase.Normal.Horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_selector" >
	<RelativeLayout 
	   	android:orientation="horizontal"
	    android:layout_width="0dp"
	    android:layout_height="wrap_content"
	    android:padding="10dp" 
	    android:layout_weight="0.8">
	    <TextView
	        android:id="@+id/sidelist_screen_name"
	        style="@style/EditTextBase.Hidden"
	        android:layout_width="wrap_content" />
        <TextView
            android:id="@+id/sidelist_item_name"
            style="@style/DebriefNavigationTitle" />      
	</RelativeLayout>
	<RelativeLayout
	    android:layout_width="0dp"
	    android:layout_height="match_parent"
	    android:layout_weight="0.2"
	    android:orientation="horizontal"
	    android:padding="10dp" >
		<TextView
				android:id="@+id/sidelist_item_count"
				style="@style/HomeTextViewItemCount"
				android:layout_alignParentRight="true"
      		android:layout_centerInParent="true"/> 
	</RelativeLayout>
</LinearLayout>
