<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">
    
	<TextView
        android:id="@+id/survey_mcq_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/TextViewBase.Normal"  />
	
	<TextView
        android:id="@+id/survey_mcq_selections"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/TextViewBase.Emphasis"  />
	
	<RelativeLayout 
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content" >

		<LinearLayout
			android:id="@+id/survey_mcq_comment_block"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:visibility="gone">

			<TextView
				android:id="@+id/survey_mcq_comment_lbl"
				android:layout_width="match_parent"
				android:layout_height="wrap_content" />

			<EditText
				android:id="@+id/survey_mcq_comment_fld"
				android:layout_width="match_parent"
				android:layout_height="wrap_content" />

		</LinearLayout>

		<LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:orientation="horizontal" 
			android:layout_alignParentRight="true"
			android:layout_below="@+id/survey_mcq_comment_block">

			<Button
				android:id="@+id/survey_mcq_select"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				style="@style/ButtonBase.Survey"
				android:layout_centerHorizontal="true"
				android:layout_marginTop="6dip"
				android:layout_marginBottom="3dip"  />

			<Button
			    android:id="@+id/survey_mcq_skip"
			    android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        style="@style/ButtonBase.Survey"
		        android:layout_marginTop="6dip"
		        android:layout_marginBottom="3dip"  />
			
			<Button
			    android:id="@+id/survey_mcq_next"
			    android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        style="@style/ButtonBase.Survey"
		        android:layout_marginTop="6dip"
		        android:layout_marginBottom="3dip"  />
		
		</LinearLayout>
	
	</RelativeLayout>
	
	<TextView
        android:id="@+id/survey_mcq_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/TextViewBase.Normal"
        android:layout_marginBottom="2dip"  />
	
    <TextView
        android:id="@+id/survey_mcq_feedback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/TextViewBase.Normal"
        android:layout_marginBottom="2dip"  />
	
</merge>