<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/LinearBase.Normal.Horizontal"
    android:background="@drawable/list_selector"
    android:gravity="center_vertical" >
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
        <TableLayout
            android:id="@+id/table_layout"
            style="@style/TableBase.Normal" >
            <TableRow style="@style/TableRowBase.Normal" >
                <TextView
                    android:id="@+id/task_attachment__metrix_row_id"
                    style="@style/EditTextBase.Hidden" />
                <TextView
                    android:id="@+id/task_attachment__attachment_id"
                    style="@style/EditTextBase.Hidden" />
                <TextView
                    android:id="@+id/attachment__attachment_description"
                    style="@style/TextViewBase.Normal.List.Wide" />
                <TextView
                    android:id="@+id/attachment__attachment_name"
                    style="@style/TextViewBase.Normal.List.Wide"
                    android:autoLink="web" />
                <TextView
                    android:id="@+id/attachment__mobile_path"
                    style="@style/EditTextBase.Hidden" />                
            </TableRow>
        </TableLayout>
    </LinearLayout>
</LinearLayout>