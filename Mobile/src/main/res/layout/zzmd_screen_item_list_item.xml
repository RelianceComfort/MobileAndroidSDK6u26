<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/ZZMD.LinearBase.Normal.Horizontal"
    android:background="@drawable/list_selector"
    android:gravity="center_vertical" >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
	    <ImageView
	        android:id="@+id/is_added_icon"
	        android:layout_width="12dip"
	        android:layout_height="12dip" />
	    <ImageView
	        android:id="@+id/is_edited_icon"
	        android:layout_width="16dip"
	        android:layout_height="16dip" />
	</LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
        <TableLayout
            android:id="@+id/table_layout"
            style="@style/ZZMD.TableBase.Normal" >
            <TableRow style="@style/ZZMD.TableRowBase.Normal" >
                <TextView
                    android:id="@+id/mm_screen_item__item_name"
                    style="@style/ZZMD.TextViewBase.Strong.List.Full" />
            </TableRow>
            <TableRow style="@style/ZZMD.TableRowBase.Normal" >
                <TextView
                    android:id="@+id/mm_screen_item__description"
                    style="@style/ZZMD.TextViewBase.Emphasis" />
                <TextView
                    android:id="@+id/mm_screen_item__metrix_row_id"
                    style="@style/ZZMD.TextViewBase.Hidden" />
                <TextView
                    android:id="@+id/mm_screen_item__item_id"
                    style="@style/ZZMD.TextViewBase.Hidden" />
                <TextView
                    android:id="@+id/mm_screen_item__is_baseline"
                    style="@style/ZZMD.TextViewBase.Hidden" />
            </TableRow>
        </TableLayout>
    </LinearLayout>
</LinearLayout>