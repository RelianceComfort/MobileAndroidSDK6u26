<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
	<LinearLayout style="@style/ZZMD.LinearBase.Normal.Vertical"
		android:descendantFocusability="beforeDescendants"
		android:focusableInTouchMode="true">
	    <ScrollView
	        style="@style/ZZMD.ScrollViewBase.Normal.Vertical"
	        android:layout_weight="1" >
		    <LinearLayout
		        android:id="@+id/table_layout"
		        style="@style/ZZMD.LinearBase.Normal.Vertical"
		        android:focusable="true"
	            android:focusableInTouchMode="true" >

				<TextView
					style="@style/ZZMD.TextViewBase.Title"
					android:id="@+id/add_design"></TextView>

				<TextView
					style="@style/ZZMD.TextViewBase.Emphasis"
					android:id="@+id/screen_Info_metrix_designer_design_add"></TextView>
				<LinearLayout style="@style/ZZMD.LinearBase.Normal.Horizontal.Table">

					<TextView
						style="@style/ZZMD.TextViewBase.Normal.Table.TwoColumn"
						android:id="@+id/name66cc700a"></TextView>
					<EditText
					    android:id="@+id/name"
						style="@style/ZZMD.EditTextBase.Normal.Table.TwoColumn" />
				</LinearLayout>   
	            <LinearLayout
	                style="@style/ZZMD.LinearBase.Normal.Horizontal.Table" >

					<TextView
						style="@style/ZZMD.TextViewBase.Normal.Table.TwoColumn"
						android:id="@+id/design"></TextView>
	                <Spinner
	                    android:id="@+id/source_design_id"
	                    style="@style/ZZMD.SpinnerBase.Normal.Table.TwoColumn" >
	                </Spinner>
	            </LinearLayout>
				<LinearLayout 
					style="@style/ZZMD.LinearBase.Normal.Horizontal.Table" >  
	                <TextView
	                    android:id="@+id/source_design_description_label"
		                style="@style/ZZMD.TextViewBase.Normal.Table.TwoColumn"
		                android:visibility="invisible" />
					<TextView
					    android:id="@+id/source_design_description"
					    style="@style/ZZMD.TextViewBase.ReadOnlyValue.Table.TwoColumn.Small" />
				</LinearLayout>
	            <LinearLayout
	                style="@style/ZZMD.LinearBase.Normal.Horizontal.Table" >

					<TextView
						style="@style/ZZMD.TextViewBase.Normal.Table.TwoColumn"
						android:id="@+id/revision"></TextView>
	                <Spinner
	                    android:id="@+id/source_revision_id"
	                    style="@style/ZZMD.SpinnerBase.Normal.Table.TwoColumn" >
	                </Spinner>
	            </LinearLayout>
				<LinearLayout 
					style="@style/ZZMD.LinearBase.Normal.Horizontal.Table" >  
	                <TextView
	                    android:id="@+id/source_revision_description_label"
		                style="@style/ZZMD.TextViewBase.Normal.Table.TwoColumn"
		                android:visibility="invisible" />
					<TextView
					    android:id="@+id/source_revision_description"
					    style="@style/ZZMD.TextViewBase.ReadOnlyValue.Table.TwoColumn.Small" />
				</LinearLayout>
				<LinearLayout style="@style/ZZMD.LinearBase.Normal.Horizontal.Table">
					<TextView
						style="@style/ZZMD.TextViewBase.Normal.FullWidth"
						android:id="@+id/description87969ca2" />
				</LinearLayout>
				<LinearLayout 
					style="@style/ZZMD.LinearBase.Normal.Horizontal.Table" >  
					<EditText
					    android:id="@+id/description"
						style="@style/ZZMD.EditTextBase.MultiLine" />
				</LinearLayout>	
	        </LinearLayout>
	    </ScrollView>
		<LinearLayout 
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:background="@color/White"
		    android:orientation="horizontal"
		    android:padding="5dip" >

			<Button
				android:id="@+id/save"
				style="@style/ZZMD.ButtonBase.Normal.ActionBar"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_weight="1" />
		</LinearLayout>
	</LinearLayout>
	<!-- The navigation drawer -->  
    <include layout="@layout/sliding_menu_layout"/>
    
</androidx.drawerlayout.widget.DrawerLayout>