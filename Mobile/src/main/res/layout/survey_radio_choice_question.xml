<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/survey_rcq_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/TextViewBase.Normal"  />

    <LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">

        <LinearLayout
        	android:layout_weight="1"
        	android:layout_width="0dp"
		    android:layout_height="wrap_content"
            android:orientation="vertical">

		    <RadioGroup
		        android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:orientation="vertical"
			    android:layout_marginTop="4dip"
			    android:layout_marginBottom="4dip"
			    android:id="@+id/survey_rcq_radio_container">

			</RadioGroup>

			<LinearLayout
				android:id="@+id/survey_rcq_comment_block"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical"
				android:visibility="gone">

				<TextView
					android:id="@+id/survey_rcq_comment_lbl"
					android:layout_width="match_parent"
					android:layout_height="wrap_content" />

				<EditText
					android:id="@+id/survey_rcq_comment_fld"
					android:layout_width="match_parent"
					android:layout_height="wrap_content" />

			</LinearLayout>

		</LinearLayout>

		<Button
		    android:id="@+id/survey_rcq_continue"
		    android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        style="@style/ButtonBase.Survey"
	        android:layout_gravity="bottom"
	        android:layout_marginBottom="2dip" />

	</LinearLayout>

    <TextView
        android:id="@+id/survey_rcq_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/TextViewBase.Normal"
        android:layout_marginBottom="2dip"  />

    <TextView
        android:id="@+id/survey_rcq_feedback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/TextViewBase.Normal"
        android:layout_marginBottom="2dip"  />

</merge>